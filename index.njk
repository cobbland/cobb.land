<div class="home-latest">
    <div>
        <h2>Posts</h2>
    
        <ul>
            {% for post in collections.post | limit(4) %}
                <li>
                    <a href="{{ post.url }}">
                        {{ post.data.title }}
                    </a>
                    <p class="date">{{ post.date.toDateString() }}</p>
                </li>
            {% endfor %}
        </ul>
    
        <p><a href="/blog">More posts</a></p>
    </div>
    
    <div>
        <h2>Pages</h2>
    
        <div>
            <ul class="pages">
                {% for page in collections.page | limit(12) | sort(attribute='data.title') %}
                    <li>
                        <a href="{{ page.url }}">
                            {{ page.data.title }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    
        <p><a href="/more">More pages</a></p>
    </div>
</div>