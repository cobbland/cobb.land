<p>To shortcut to one of the links below, go to <code>cobb.land/links/#whattever</code>, replacing "whatever" with the listed hashtag.</p>

<ul>

    {% for shortcut in collections.bookmark | sort(attribute='data.id') %}
        {% if shortcut.data.id %}
            <li rel="bookmark" id="{{shortcut.data.id}}" data-url="{{shortcut.data.bookmark}}">
                <a href="{{shortcut.data.bookmark}}" class="shortcut">{{shortcut.data.bookmark}}</a>
            </li>
        {% endif %}
    {% endfor %}

</ul>

<p class="note">Copied from <a href="https://mat.tl/s/">mattl</a>.</p>

<script>
document.addEventListener("DOMContentLoaded", () => {
    const hash = window.location.hash.slice(1);
    if (!hash) return;

    const article = document.getElementById(hash);
    if (!article || !article.dataset.url) return;

    location.replace(article.dataset.url);
});
</script>