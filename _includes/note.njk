---
layout: "window.html"
---
<article class="h-entry">
    {% if reply %}
        <p class="note p-name">Reply to 
            <a href="{{ reply }}" class="u-in-reply-to">{{ name }}</a>
            {% if author and site %}
                by <a class="" href="{{ site }}">{{ author }}</a>
            {% elif author %}
                by <span class"">{{ author }}</span>
            {% endif %}
        </p>
    {% elif bookmark %}
        <p class="note p-name">Bookmark of 
            <a class="u-bookmark-of u-repost-of h-cite" href="{{ bookmark }}">{{ name }}</a>
            {% if author and site %}
                by <a class="" href="{{ site }}">{{ author }}</a>
            {% elif author %}
                by <span class"">{{ author }}</span>
            {% endif %}
        </p>
    {% endif %}
    <div class="p-content">
        {% if quote and bookmark %}
            <blockquote cite="{{ bookmark }}">{{ quote }}</blockquote>
        {% endif %}
        {% if quote and reply %}
            <blockquote cite="{{ reply }}">{{ quote }}</blockquote>
        {% endif %}
        {{ content | safe }}
    </div>
    <p style="margin-top: 1rem;" class="article-date">Posted or edited on <a class="u-url" href="{{ page.url }}"><time class="dt-published dt-updated" datetime="{{ date }}">{{ date.toDateString() }}</time></a> by <a rel="author" class="p-author h-card" href="/">Cobb</a></p>
    <a rel="syndication invisible" class="u-syndication" href="{{ possed }}"></a>
</article>

<hr>

<div class="reply-buttons">
    <a class="link-button" href="https://webmention.io/cobb.land/webmention"><img src="/images/webmention-88x31.jpg" alt="webmention button" height="31" width="88" /></a>
    <a class="link-button" href="mailto:hello@cobb.land?subject={% uri title %}"><img src="/images/email-88x31.jpg" alt="email button" height="31" width="88" /></a>
    {% if possed %}
        <a class="link-button" href="{{ possed }}"><img src="/images/mastodon-88x31.jpg" alt="mastodon button" height="31" width="88" /></a>
    {% endif %}
</div>

<div id="webmentions"></div>